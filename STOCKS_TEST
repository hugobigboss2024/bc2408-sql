SELECT * FROM STOCKS;
SELECT * FROM USER;
SELECT * FROM USER WHERE VIP IS FALSE;
SELECT * FROM STOCKS WHERE Listing_date > '2004-12-15';
SELECT * FROM STOCKS WHERE Listing_date < '2004-12-15' AND PRICE > 10;
