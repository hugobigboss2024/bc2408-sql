CREATE DATABASE HK_STOCKS;
USE HK_STOCKS;

CREATE TABLE USER (
    ID INT,
    User_name VARCHAR(50),
    Email VARCHAR(60),
    Registration_date DATE,
    wallet_balance DECIMAL(10, 2),
    wallet_status VARCHAR(10),
    VIP BOOLEAN
);


